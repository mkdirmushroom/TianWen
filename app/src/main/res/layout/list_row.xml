<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg_play"
    android:padding="16dp"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/listrow_textview_shot"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/swipe_color_3"
            android:gravity="center"
            android:text="2"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/listrow_textview_topic"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2014年汇东食堂学生评价调查"
            android:textColor="#666"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/listrow_textview_date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="11月11日"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/listrow_imageViwe_done"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/check"
                android:textColor="@color/pink" />
        </LinearLayout>
</LinearLayout>