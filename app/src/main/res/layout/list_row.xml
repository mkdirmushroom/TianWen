<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg_play">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listrow_textview_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2014年汇东食堂学生评价调查"
            android:textColor="#666"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建于"
                android:textColor="@color/Cyan" />

            <TextView
                android:id="@+id/listrow_textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="2014-9-21"
                android:textColor="#6666" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/listrow_imageViwe_done"
        android:layout_width="30"
        android:layout_height="30"
        android:layout_alignParentRight="true"
        android:background="@drawable/checkmark_round"
        android:textColor="@color/pink" />

</RelativeLayout>